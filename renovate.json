{
  "extends": [
    "config:base",
    ":rebaseStalePrs"
  ],
  "baseBranches": [
    "dev"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch"
    }
  ],
  "prConcurrentLimit": 1
}